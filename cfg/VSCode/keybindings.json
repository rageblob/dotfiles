// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+t cmd+t",
        "command": "workbench.action.terminal.new"
    },
    {
        "key": "cmd+-",
        "command": "workbench.action.decreaseViewSize",
        "when": "terminalFocus"
    },
    {
        "key": "shift+cmd+m",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "[Period]",
        "command": "selectForCompare",
        "when": "filesExplorerFocus && foldersViewVisible"
    },
    {
        "key": "shift+cmd+c",
        "command": "compareSelected",
        "when": "filesExplorerFocus || openEditorsFocus"
    },
    {
        "key": "shift+cmd+o",
        "command": "workbench.files.action.compareFileWith",
        "when": "filesExplorerFocus && foldersViewVisible"
    },
    {
        "key": "alt+n",
        "command": "-gl.newChatConversation",
        "when": "config.gitlab.duoChat.enabled && gitlab:chatAvailable && gitlab:chatAvailableForProject"
    },
    {
        "key": "alt+cmd+h",
        "command": "gitlens.toggleFileHeatmap",
        "when": "editorFocus"
    },
    {
        "key": "cmd+k v",
        "command": "-markdown.showPreviewToSide",
        "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusNextGroup",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusPreviousGroup",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+l",
        "command": "gl.webview.duoWorkflowPanel.show"
    },
    {
        "key": "alt+cmd+b",
        "command": "git.blame.toggleEditorDecoration",
        "when": "editorFocus"
    },
    {
        "key": "alt+cmd+b",
        "command": "workbench.action.toggleAuxiliaryBar",
        "when": "!editorFocus"
    },
    {
        "key": "alt+cmd+b",
        "command": "-workbench.action.toggleAuxiliaryBar"
    },
    {
        "key": "cmd+up",
        "command": "workbench.action.decreaseViewHeight",
        "when": "panelFocus"
    },
    {
        "key": "cmd+down",
        "command": "workbench.action.increaseViewHeight",
        "when": "panelFocus"
    },
    {
        "key": "cmd+l cmd+b",
        "command": "gitlens.toggleLineBlame",
        "when": "editorFocus"
    },
    {
        "key": "shift+cmd+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
]