{
  "[markdown]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.quickSuggestions": {
      "comments": "on",
      "other": "on",
      "strings": "on"
    },
    "editor.tabSize": 2,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.wordWrap": "on"
  },
  "[yaml]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.autoIndent": "advanced",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // pink as the accent color
  "catppuccin.accentColor": "pink",
  // use your accent (pink) on the statusBar as well
  "catppuccin.customUIColors": {
    "all": {
      "statusBar.foreground": "accent"
    }
  },
  "chat.editor.fontFamily": "CaskaydiaCove Nerd Font Propo",
  "clock.alignment": "Right",
  "clock.format": "HH:MM",
  "debug.console.fontFamily": "CaskaydiaCove Nerd Font Propo",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "docker.extension.dockerEngineAvailabilityPrompt": false,
  "docker.extension.enableComposeLanguageServer": false,
  "editor.codeLensFontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.fontWeight": "normal",
  "editor.inlineSuggest.fontFamily": "CaskaydiaCove Nerd Font Propo",
  "editor.rulers": [
    //80
  ],
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.wordWrapColumn": 100,
  "editor.wrappingStrategy": "advanced",
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": false,
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.blame.editorDecoration.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.advanced": {
    "github-enterprise.uri": "https://dkbag.ghe.com",
    "github.copilot.advanced": {
      "authProvider": "github-enterprise"
    }
  },
  "github.copilot.nextEditSuggestions.enabled": false,
  "gitlab.duo.enabledWithoutGitlabProject": false,
  "gitlab.duoChat.enabled": false,
  "gitlab.keybindingHints.enabled": false,
  "gitlens.blame.fontFamily": "CaskaydiaCove Nerd Font Propo",
  "gitlens.currentLine.fontFamily": "CaskaydiaCove Nerd Font Propo",
  "markdown.extension.tableFormatter.normalizeIndentation": true,
  "redhat.telemetry.enabled": false,
  "scm.inputFontFamily": "CaskaydiaCove Nerd Font Propo",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.external.osxExec": "iTerm2.app",
  "terminal.integrated.fontSize": 13,
  "update.mode": "start",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.easymotion": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "after": [
        "<Esc>"
      ],
      "before": [
        "j",
        "j"
      ]
    }
  ],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "after": [
        "d",
        "d"
      ],
      "before": [
        "<leader>",
        "d"
      ]
    },
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        "lineBreakInsert"
      ],
      "silent": true
    }
  ],
  "vim.sneak": true,
  "vim.statusBarColors.commandlineinprogress": [
    "#FF7acc",
    "#ffffff"
  ],
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.whichwrap": "b,s,<,>",
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled",
    "vscode-kubernetes.helm-path-mac": "/opt/homebrew/bin/helm",
    "vscode-kubernetes.kubectl-path-mac": "/opt/homebrew/bin/kubectl",
    "vscode-kubernetes.minikube-path-mac": "/Users/max.bauer/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },
  "vscode-kubernetes.helm-path-mac": "/opt/homebrew/bin/helm",
  "vscode-kubernetes.kubectl-path-mac": "/opt/homebrew/bin/kubectl",
  "workbench.colorCustomizations": {
    "statusBarItem.prominentForeground": "#ffffff"
  },
  "workbench.editorAssociations": {
    "*.tfplan": "default"
  },
  "yaml-embedded-languages.include": {},
  "editor.guides.highlightActiveIndentation": "always",
  "gitlens.currentLine.enabled": false,
  "editor.wordWrap": "on",
  "yaml-with-script.enabled": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "files.enableTrash": false,
  "editor.minimap.autohide": "scroll",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Solarized Dark"
}